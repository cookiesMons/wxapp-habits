/**index.wxss**/
.habit-box {
  width: 100%;
  height: 148rpx;
  box-shadow: 0rpx 4rpx 20rpx rgba(0, 0, 0, .3);
  box-sizing: border-box;
  border-radius: 10rpx;
  position: relative;
}

.habit-box:not(:nth-child(1)) {
  margin-top: 30rpx;
}

.habit-box:active {
  box-shadow: 0rpx 4rpx 20rpx rgba(0, 0, 0, .4);
}

.habit-box .icon {
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  top: 30rpx; 
  left: 30rpx;
}

.habit-box .title {
  color:#383838;
  position: absolute;
  top: 30rpx; 
  left: 118rpx;
  font-size: 16px;
}

.habit-box .days {
  color:#A6A6A6;
  position: absolute;
  bottom: 30rpx; 
  left: 118rpx;
  font-size: 12px;
}

.habit-box .completed {
  width: 66rpx;
  height: 66rpx;
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
}
