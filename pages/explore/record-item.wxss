.record-item {
    width: 100%;
    padding: 30rpx 60rpx;
    box-shadow: 0rpx 1rpx 20rpx rgba(0, 0, 0, 0.2);
    margin-bottom: 20rpx;
}

.header {
    display: flex;
    align-items: center;
    width: 100%;
}

.user-icon {
    width: 88rpx;
    height: 88rpx;
    border-radius: 100rpx;
}

.description1 {
    margin-left: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.description1 .user-name {
    font-size: 16px;
}

.description1 .habit-description {
    font-size: 12px;
    color: #7d7e80;
    display: flex;
}

.description1 .habit-name {
    margin-left: 10rpx;
    color: #FFC300;
}

.description2 {
    font-size: 12px;
    color: #7d7e80;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    margin-left: auto;
}

.description2 .record-time {
    padding: 2px 0px 2px;
    height: 22px;
}

.description2 .record-days {
    color: #43CF7C;
    font-weight: bold;
}

.record-image {
    box-sizing: border-box;
    margin-top: 20rpx;
    width: 100%;
    height: 400rpx;
    border-radius: 14rpx;
}

.record-text {
    font-size: 16px;
    margin-top: 20rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    overflow: hidden;
}

.comment {
    background: #f9f9f9;
    border-radius: 14rpx;
    color: #7d7e80;
    font-size: 12px;
    padding: 20rpx;
    margin: 20rpx 20rpx 20rpx;
}

.comment .line{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.comment .from{
  color:#FFC300;
}

.comment .to{
  color:#FFC300;
}

.interaction {
  display: flex;
  justify-content: flex-end;
  color: #7d7e80;
  font-size: 12px;
  margin: 30rpx 20rpx 0 0;
}

.interaction .icon{
  width: 44rpx;
  height: 44rpx;
}

.interaction .count {
  margin-left: 10rpx;
  width: 60rpx;
}

.interaction .i-like,
.interaction .i-comment {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

